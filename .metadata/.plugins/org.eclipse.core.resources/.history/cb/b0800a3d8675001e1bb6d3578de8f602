
public class Question2 {

	public static void main(String[] args) {
		int [] arr = {5, 1, 1, 1, 2, 3, 5};
		int max=arr[0];
		for(int i=0; i<arr.length; i++) {
			if(arr[i]>max) {
				max = arr[i];
			}
		}
		boolean [] idxarr = new boolean[max+1];
		
		for(int i=0; i<arr.length; i++) {
			idxarr[arr[i]] = true;
		}
		int num_to_reduce = max;
		int reduced_previously = 0;
		int counter = 0;
		for(int i=0; i<max; i++) {
			if(num_to_reduce<=0) {
				break;
			}
			if(idxarr[i]) {
				num_to_reduce = num_to_reduce - (i - reduced_previously);
				reduced_previously = i;
				counter++;
				System.out.println(num_to_reduce);
				System.out.println(reduced_previously);
				System.out.println(" ");
			}
			
		}
		System.out.println(counter);
		
	}

}
